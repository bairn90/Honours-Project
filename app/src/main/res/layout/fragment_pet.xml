<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.brianmsurgenor.honoursproject.Pet.PetFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pet_background"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/petView"
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:layout_height="350dp" />

        </RelativeLayout>


    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/feedMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:onClick="feedPet"
        android:src="@drawable/ic_local_dining_black_24dp"
        app:backgroundTint="@color/toolbar"
        app:layout_anchor="@id/frame"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>